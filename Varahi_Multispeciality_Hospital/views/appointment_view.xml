<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Form View -->
    <record id="view_hospital_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="hospital_appointment_form">
                <header>
                    <button name="state_btn_in_consultation" class="oe_highlight" string="In Consultation" type="object" states="draft" data-hotkey="i"/>
                    <button name="state_btn_done" class="oe_highlight" string="Mark as Done" type="object" states="in_consultation" data-hotkey="d"/>
                    <button name="state_btn_cancel" class="oe_highlight" string="Cancel" type="object" states="draft,in_consultation" data-hotkey="w"/>
                    <button name="state_btn_draft" class="oe_highlight" string="Reset to Draft" type="object" states="cancel" data-hotkey="d"/>
                    <field name="state" widget="statusbar" nolabel="1"/>

                    <button name="whats_app_button" string="WhatsApp Share" type="object" data-hotkey="g" icon="fa-whatsapp"/>
                </header>
                <sheet>
                    <field name="priority" widget="priority"/>
                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="booking_time"/>
                            <field name="ref"/>
                            <field name="receptionist_id"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="doctor_id"/>
                            <field name="appointment_date"/>
                            <button name="object_button" string="Object btn" type="object" class="oe_highlight"/>
                            <button name="%(Varahi_Multispeciality_Hospital.action_hospital_patient)d" string="Action btn"
                            confirm="Are You Sure to Redirect For Patient Record screen?"
                            help="Go to Patient Records"
                            type="action" class="oe_highlight"/>
                        </group> 
                    </group>
                    <notebook>
                        <page string="Prescription" name="prescription">
                        </page>
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_record_ids">
                                <tree editable="bottom">
                                    <field name="medicine_id"/>
                                    <field name="morning_qty"/>
                                    <field name="afternoon_qty"/>
                                    <field name="night_qty"/>
                                    <field name="prec_time"/>
                                    <field name="prec_days"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="medicine_id"/>
                                        <field name="morning_qty"/>
                                        <field name="afternoon_qty"/>
                                        <field name="night_qty"/>
                                        <field name="prec_time"/>
                                        <field name="prec_days"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <group>
                                <field name="doc_note" placeholder="Please enter suggestion for patient" options="{'collaborative': true}"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>
<!-- Tree View -->
    <record id="view_hospital_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree string="hospital_appointment_tree" sample="1" multi_edit="1" decoration-info="state=='draft'" decoration-primary="state=='in_consultation'" decoration-success="state=='done'"  decoration-danger="state=='cancel'" >
                <field name="patient_id" decoration-bf="1" decoration-it="1"/>
                <field name="gender"/>
                <field name="doctor_id"/>
                <field name="appointment_date"/> 
                <field name="receptionist_id" widget="many2one_avatar"/>
                <field name="booking_time" optional="show"/>
                <field name="ref" optional="hide"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state" decoration-info="state=='draft'" decoration-primary="state=='in_consultation'" decoration-success="state=='done'"  decoration-danger="state=='cancel'" widget="badge"/>
                <field name="priority" widget="priority"/>    
            </tree>
        </field>
    </record>
<!-- Activity View -->
    <record id="view_hospital_appointment_activity" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <activity string="hospital_appointment_activity">
               <!-- <field name="patient_id"/> -->
                <templates>
                    <div t-name="activity-box">
                        <img t-att-src="activity_image('hospital.patient', 'image', record.patient_id.raw_value)" t-att-title="record.patient_id.value" t-att-alt="record.patient_id.value"/>
                        <div>
                            <field name="patient_id" display="full"/>
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>
<!-- Search View -->
    <record id="view_hospital_appointment_search" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search string="hospital_appointment_search">
            </search>
        </field>
    </record>
<!-- Action -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Hospital Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,kanban,form,activity</field> 
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create a Appointment!!!!!!
            </p>
        </field>
    </record>
<!-- Menu -->
    <menuitem id="hospital_appointment_menu"
        name="Appointments"
        sequence="0"
        parent="hospital_appointment_root_menu"
        action="action_hospital_appointment"/>

</odoo>